
<% if current_user == nil %>
  <form action="<%= register_path %>">
      <input type="submit" id= 'register_button' value="Register!">
  </form>
  <form action="<%= login_path %>">
      <input type="submit" id='register_button' value="Log in">
  </form>
  <br><br>
<% else %>
  <form action="<%= logout_path %>">
      <input type="submit" id='register_button' value="Log out">
  </form>
  <br><br>
<% end %>

<div class='pull-right'>
  <h1>Job Openings</h1>
  <% @jobs.each do |job| %>

    <div class='well'>
      
      <h2><%=link_to job.title, job_path(:id => job.id) %></h2>
        <li>Company: <%= job.company %></li>
        <li>Salary: <%= job.salary %></li>
        <li><%= job.address %></li>

    </div>
  <% end %>
</div>

<h4>Post your resume, college courses, references, and more. <br>
    We are giving you access to world class educational<br> resources so you can get ahead in life.
 </h4>

<div class='pull-left'>
  <h1>Our Skills</h1> 
  <form action="<%= new_job_path %>">
      <input type="submit" value="Post Job, 100% Free">
  </form><br>
  <% @skills.each do |skill| %>

    <div class='well'> <font size='5'><%= link_to skill.title, fix_url(skill.url), :target => '_blank' %></font>
        <small><%= link_to 'Add to My Library', new_user_skill_path(:skill_id => skill.id) %></small>
        <br><strong>Description</strong><br>
        <%=skill.description %>


    </div>
  <% end %>
</div>

