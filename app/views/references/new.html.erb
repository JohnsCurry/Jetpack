<%= form_for @reference do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
<br/><br/>
  <%= f.label :relationship %><br/>
  <%= f.text_field :relationship %>
<br/><br/>
  <%= f.label :phone %><br/>
  <%= f.text_field :phone %>
<br/><br/>
  <%= f.label :email %><br/>
  <%= f.text_field :email %>
<br/><br/>
  <%= f.label :company %><br/>
  <%= f.text_field :company %>
<br/><br/>
  <%= f.label :comments %><br/>
  <%= f.text_area :comments, rows: 10 %>
<br/><br/>

<%= f.submit "Create Reference" %>

<% end %>