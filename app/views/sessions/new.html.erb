<%= render 'shared/title', title: 'Log in' %>


<div class='well'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div><br/>
    <div class='control-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
      <p><%#= link_to "Forgot Password?", new_password_reset_path %></p>
    <br/>
    <%= submit_tag 'Log in', class: 'btn btn-success' %>
  <% end %>
</div>