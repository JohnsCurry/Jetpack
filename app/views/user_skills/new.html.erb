<% if current_user.status == 'career/education' %>
  <h1>Describe what you are learning or have learned from this course</h1>
<% elsif current_user.status == 'Employer' %>
  <h3>Add this skill to your library to let prospective job candidates know you want to hire someone learning it. Give a brief explanation if you want.</h3>
<% end %>
<%= form_for @user_skill do |f|                %>
  <%= f.label      :title                %>
  <%= f.text_field :title                %>
  <br/>
  <%= f.label      :progress          %>
  <br/>
  <%= f.text_area  :progress, rows: 5 %>
  <br/>
  <%= f.hidden_field :url %>
  <%= f.hidden_field      :description %>


  <%= f.submit @user_skill.new_record? ? "Add to my library" : "Update Skill", class: 'btn btn-primary'    %>
<% end %>